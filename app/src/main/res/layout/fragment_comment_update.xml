<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

  <TextView
      android:id="@+id/write"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:layout_marginBottom="10dp"
      android:letterSpacing="-0.05"
      android:text="댓글 수정"
      android:textColor="@color/colorPrimaryDark"
      android:textSize="16dp"
      android:textStyle="bold"
      app:layout_constraintBottom_toTopOf="@id/write_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />


  <!-- 내용 -->
  <EditText
      android:id="@+id/write_content"
      android:layout_width="match_parent"
      android:layout_height="300dp"
      android:layout_marginTop="15dp"
      android:background="@drawable/edit_text_border"
      android:gravity="top"
      android:hint="내용"
      android:letterSpacing="-0.05"
      android:padding="10dp"
      android:textSize="14dp"
      android:textColor="@color/black"
      android:textColorHint="@color/black"
      app:layout_constraintTop_toBottomOf="@id/write_complete"
      app:layout_constraintBottom_toTopOf="@id/write_complete" />


  <!-- 등록버튼 -->
  <Button
      android:id="@+id/write_complete"
      android:layout_width="70dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:background="@drawable/btn_teal"
      android:text="완료"
      android:textSize="12dp"
      android:textColor="@color/white"
      android:letterSpacing="-0.05"
      app:layout_constraintTop_toBottomOf="@id/write_content"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>