<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login.LoginRegisterActivity">

    <LinearLayout
        android:id="@+id/topNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/at_logo" />

    </LinearLayout>

    <!--회원가입 타이틀-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:letterSpacing="-0.05"
        android:paddingLeft="20dp"
        android:text="캐릭터 등록"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!--구분선-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/gray" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <!--아이디-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/register_id_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/register_id_title"
                    android:text="원본사진"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/registerTitle" />

                <ImageView
                    android:id="@+id/avatar_camera_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="148dp"
                    android:src="@drawable/pic_plus"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"

                    app:layout_constraintStart_toStartOf="@id/register_id_title"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="45dp" />

                <Button
                    android:id="@+id/avatar_gallery"
                    style="@style/registerEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="36dp"
                    android:background="@drawable/btn_pup"
                    android:letterSpacing="-0.05"
                    android:text="갤러리"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toStartOf="@id/avatar_camera"
                    app:layout_constraintTop_toBottomOf="@id/register_id_title" />

                <Button
                    android:id="@+id/avatar_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="92dp"
                    android:background="@drawable/btn_pup"
                    android:letterSpacing="-0.05"
                    android:text="촬영"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/avatar_gallery"
                    app:layout_constraintTop_toBottomOf="@id/register_id_title" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--비밀번호-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/register_pwd_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/register_id_group">

                <TextView
                    android:id="@+id/register_pwd_title"
                    android:text="아바타 이름"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/registerTitle" />

                <EditText
                    android:id="@+id/register_pwd"
                    android:hint=""
                    app:layout_constraintTop_toBottomOf="@id/register_pwd_title"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/registerEditText"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--비밀번호-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/register_pwdcheck_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/register_pwd_group">

                <TextView
                    android:id="@+id/register_pwdcheck_title"
                    android:text="아바타 설명"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/registerTitle" />

                <TextView
                    android:id="@+id/register_pwdcheck_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:letterSpacing="-0.05"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@id/register_pwdcheck_title"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/register_pwdcheck"/>

                <EditText
                    android:id="@+id/register_pwdcheck"
                    android:hint=""
                    app:layout_constraintTop_toBottomOf="@id/register_pwdcheck_title"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/registerEditText"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--닉네임-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/register_nickname_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/register_pwdcheck_group">

                <TextView
                    android:id="@+id/register_nickname_title"
                    android:text="아바타 스타일"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/registerTitle"/>

              <RadioGroup
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  tools:ignore="MissingConstraints">
                  <RadioButton
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="cartoon"></RadioButton>

                  <RadioButton
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Arcane"></RadioButton>

                  <RadioButton
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="caricature"></RadioButton>
                  <RadioButton
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="anime"></RadioButton>

              </RadioGroup>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--비밀번호-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/register_avatar_styleid_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/register_nickname_group">

                <TextView
                    android:id="@+id/register_avatar_styleid_title"
                    android:text="아바타 스타일 번호"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/registerTitle" />

           =
                <EditText
                    android:id="@+id/register_avatar_styleid"
                    android:hint=""
                    app:layout_constraintTop_toBottomOf="@id/register_avatar_styleid_title"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/registerEditText"/>


                <Button
                    android:id="@+id/avatar_created_button"
                    style="@style/btnBasic"
                    android:layout_marginTop="128dp"
                    android:layout_marginEnd="39dp"
                    android:layout_marginBottom="96dp"
                    android:background="@drawable/btn_teal"
                    android:text="아바타변형"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toStartOf="@+id/avatar_created_image"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <ImageView
                    android:id="@+id/avatar_created_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/pic_plus"
                    tools:layout_editor_absoluteX="142dp"
                    tools:layout_editor_absoluteY="96dp"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/resup"
                    style="@style/btnBasic"
                    android:layout_marginTop="77dp"
                    android:background="@drawable/btn_teal"
                    android:text="등록완료"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/register_avatar_styleid"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="267dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <!--등록버튼-->
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

</LinearLayout>