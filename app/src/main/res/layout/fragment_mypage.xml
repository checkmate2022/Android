<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.MyPageFragment"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <!--마이페이지탭 타이틀-->
        <TextView
            android:id="@+id/profile_title"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:letterSpacing="-0.05"
            android:text="마이페이지"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold"
           android:layout_marginBottom="20dp"
            android:paddingBottom="5dp"
            android:paddingTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:paddingTop="20dp"
            android:id="@+id/edit_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_write"
            app:tint="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--프로필탭 구분선-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/gray"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--프로필-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="30dp">

                <ImageView
                    android:bottomLeftRadius="30dp"
                    android:bottomRightRadius="30dp"
                    android:topLeftRadius="30dp"
                    android:topRightRadius="30dp"
                    android:id="@+id/pf_img"
                    android:src="@drawable/exampleimage"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">



                </LinearLayout>



            </LinearLayout>

            <!--기본정보-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorPrimary"
                android:padding="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:letterSpacing="-0.05"
                        android:text="기본정보"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <!--왼쪽-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginRight="10dp">

                        <!--아이디-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:layout_marginRight="15dp"
                                android:background="@drawable/btn_white"
                                android:gravity="center"
                                android:text="아이디"
                                android:textSize="14dp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimaryDark"
                                android:letterSpacing="-0.05"/>

                            <EditText
                               android:enabled="false"
                                android:id="@+id/pf_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:letterSpacing="-0.05"
                                android:text=""
                                android:background="@null"
                                android:textColor="@color/white"
                                android:textSize="14dp" />

                        </LinearLayout>

                        <!--닉네임-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:layout_marginRight="15dp"
                                android:background="@drawable/btn_white"
                                android:gravity="center"
                                android:text="닉네임"
                                android:textSize="14dp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimaryDark"
                                android:letterSpacing="-0.05"/>

                            <EditText
                                android:enabled="false"
                                android:id="@+id/pf_nickname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:letterSpacing="-0.05"
                                android:text=""
                                android:background="@null"
                                android:textColor="@color/white"
                                android:textSize="14dp" />

                        </LinearLayout>

                        <!--이메일-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:layout_marginRight="15dp"
                                android:background="@drawable/btn_white"
                                android:gravity="center"
                                android:text="이메일"
                                android:textSize="14dp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimaryDark"
                                android:letterSpacing="-0.05"/>

                            <EditText
                                android:enabled="false"
                                android:id="@+id/pf_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:letterSpacing="-0.05"
                                android:text=""
                                android:background="@null"
                                android:textColor="@color/white"
                                android:textSize="14dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <!--캐릭터 정보-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/ivory"
                android:padding="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="캐릭터"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimary"
                    android:letterSpacing="-0.05"
                    android:layout_marginBottom="10dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="16dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"
                    android:layout_marginBottom="5dp" />


                    <androidx.cardview.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/av_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        card_view:cardBackgroundColor="@color/ivory"
                        card_view:cardCornerRadius="12dp"
                        card_view:contentPadding="4dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/ava_Add"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/pic_plus"
                                android:layout_marginBottom="10dp"/>



                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>

            <!--Footer-->
            <LinearLayout
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:background="@color/gray"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/at_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="상호명: Avatwin\n대표자: 체크메이트\n이메일: checkmate@gmail.com "
                    android:textSize="8dp"
                    android:textColor="#ff191919"
                    android:letterSpacing="-0.02"
                    android:lineSpacingMultiplier="1.2" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>